extends layout

block content
    script(src="/javascripts/persongroups.js")
    h1= "Person Groups"
    p= "Your Apartments:"
    table.table.table-striped.table-bordered
        thead
            tr
                th="Group ID"
                th="Group Name"
                th="Description"
                th="Delete"
        tbody.person-group-table
            for group in groupsJson
                tr(id='tr_'+group.personGroupId)
                    td
                        a(href='/persongroup/'+group.personGroupId) #{group.personGroupId}
                    td=group.name
                    td=group.userData
                    td
                        a.delete(id=group.personGroupId) Delete
    br
    p= "Add a person group:"
    form(name="new-person-group")
        div.form-group
            label(for='groupid') ID:
            input#groupid.form-control(type='text', placeholder='Person Group ID' name='group_id')
        div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Person Group Name' name='name')
        div.form-group
            label(for='userData') Description:
            input#userData.form-control(type='text', placeholder='Person Description' name='group_data')
        button#submit-button.btn.btn-primary(type="submit") Submit
    .results